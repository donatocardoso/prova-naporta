generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Cliente {
  nome                  String
  documento             String
}

type Endereco {
  cep                   Int
  logradouro            String
  numero                String
  complemento           String
  bairro                String
  cidade                String
}

type Item {
  descricao             String
  preco                 Float
}

model Usuario {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  nome                  String
  descricao             String
  login                 String
  senha                 String
  ativo                 Boolean @default(true)
  dataCriacao           DateTime @default(now())
  dataAlteracao         DateTime? @updatedAt
  dataInativacao        DateTime?
}

model Pedido {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  numeroPedido          Int @unique
  dataPrevisaoEntrega   DateTime
  cliente               Cliente
  enderecoEntrega       Endereco
  items                 Item[]
  dataCriacao           DateTime @default(now())
}
